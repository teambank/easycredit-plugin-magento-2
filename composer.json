{
  "name": "teambank/easycredit-plugin-magento-2",
  "description": "easyCredit Payment integration for Magento 2",
  "type": "magento2-module",
  "license": "MIT",
  "require": {
    "netzkollektiv/easycredit-api-v3-php": "^2.0"
  },
  "authors": [
    {
      "name": "NETZKOLLEKTIV GmbH",
      "email": "kontakt@netzkollektiv.com",
      "homepage": "http://www.netzkollektiv.com/"
    }
  ],
  "autoload": {
    "files": [
      "registration.php"
    ],
    "psr-4": {
      "Netzkollektiv\\EasyCredit\\": ""
    }
  },
  "require-dev": {
    "phpstan/phpstan": "^1.9",
    "phpstan/extension-installer": "^1.2",
    "bitexpert/phpstan-magento": "^0.27.0"
  },
  "config": {
    "allow-plugins": {
      "phpstan/extension-installer": true
    }
  }
}
