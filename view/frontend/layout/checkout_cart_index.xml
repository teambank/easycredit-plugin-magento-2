<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="checkout.cart.totals">
            <arguments>
                <argument name="jsLayout" xsi:type="array">
                    <item name="components" xsi:type="array">
                        <item name="block-totals" xsi:type="array">
                            <item name="children" xsi:type="array">
                                <item name="easycredit" xsi:type="array">
                                    <item name="component" xsi:type="string">Netzkollektiv_EasyCredit/js/view/cart/totals/easycredit</item>
                                    <item name="config" xsi:type="array">
                                        <item name="title" xsi:type="string">Interest</item>
                                    </item>
                                </item>
                            </item>
                        </item>
                    </item>
                </argument>
            </arguments>
        </referenceBlock>
        <referenceContainer name="checkout.cart.methods">
            <block class="Netzkollektiv\EasyCredit\Block\PpPlugin"
                   name="easycredit.pp-plugin"
                   template="Netzkollektiv_EasyCredit::easycredit/pp-plugin-cart.phtml"
                   ifconfig="payment/easycredit/widget_cart_enabled">
            </block>
        </referenceContainer>
    </body>
</page>
